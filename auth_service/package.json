{
  "name": "auth",
  "description": "Authentication micro-service",
  "author": "sudoku",
  "private": true,
  "scripts": {
    "build": " tsc",
    "cleanup": "rimraf ./dist",
    "create-migration": "npm run typeorm migration:generate -- ./src/db/migrations/UserDisplayNameNotNull -d ./src/db/data-source.ts && npm run typeorm migration:run -- -d ./src/db/data-source.ts",
    "lint:fix": "eslint src --fix",
    "lint": "eslint src",
    "sonar": "node sonar-project.js",
    "start:dev": "nodemon --exec ts-node --files src/index.ts",
    "start": "node dist/index.js",
    "start-dev": "ts-node src/index.ts",
    "test-debug": "node --inspect-brk ./node_modules/.bin/jest --detectOpenHandles --coverage --colors",
    "test": "jest --detectOpenHandles --coverage --colors",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cookie-signature": "^1.2.1",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "eventbus_client": "file:../eventbus/events/clients/ts",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "protobufjs": "^7.2.6",
    "rate-limiter-flexible": "^5.0.0",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.12.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cookie-signature": "^1.1.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/ip": "^1.1.3",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.28",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.11.9",
    "@types/yup": "^0.29.14",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.13.0",
    "fast-check": "^3.16.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint src/*.ts --fix-dry-run"
    ]
  }
}
